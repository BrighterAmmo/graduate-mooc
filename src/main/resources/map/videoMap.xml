<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD com.example.Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.graduate.mooc.mapper.VideoMap">

    <select id="ListVideo" parameterType="com.graduate.mooc.domain.Video" resultType="Video">
        SELECT * FROM video
        where 1 = 1
        <if test=" vno!=null and   vno!= ''">
            and vno=#{vno}
        </if>
        <if test=" chid!=null and  chid != ''">
            and chid=#{chid}
        </if>
        <if test=" sno!=null and   sno!= ''">
            and sno=#{sno}
        </if>
        <if test=" state!=null ">
            and state=#{state}
        </if>
        <if test=" play!=null">
            and play=#{play}
        </if>
        <if test=" time!=null and   time!= ''">
            and time=#{time}
        </if>
    </select>

    <insert id="addVideo" parameterType="com.graduate.mooc.domain.Video" >
        <selectKey keyProperty="vno" resultType="String" order="BEFORE">
            select replace(UUID(),"-","")
        </selectKey>
        insert into video
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test=" vno!=null and   vno!= ''">
                #{vno}
            </if>
            <if test=" chid!=null and  chid != ''">
                #{chid}
            </if>
            <if test=" sno!=null and   sno!= ''">
               #{sno}
            </if>
            <if test=" state!=null ">
               #{state}
            </if>
            <if test=" play!=null">
                #{play}
            </if>
            <if test=" time!=null and   time!= ''">
                #{time}
            </if>
        </trim>
    </insert>

    <update id="updateVideo" parameterType="com.graduate.mooc.domain.Video">
        update video
        <set>

            <if test=" chid!=null and  chid != ''">
                chid=#{chid},
            </if>
            <if test=" sno!=null and   sno!= ''">
                sno=#{sno},
            </if>
            <if test=" state!=null ">
                state=#{state},
            </if>
            <if test=" play!=null">
                play=#{play},
            </if>
            <if test=" time!=null and   time!= ''">
                time=#{time},
            </if>

        </set>
        where vno=#{vno}
    </update>

</mapper>